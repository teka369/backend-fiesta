// Backend Fiesta - E-commerce Administrativo
// PostgreSQL + Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SiteSettings {
  id                 String   @id @default("main")
  googleMapsEmbedUrl String?
  featuredProductId  String?
  contactPhone       String?
  updatedAt          DateTime @updatedAt

  @@map("site_settings")
}

// ============== AUTH ==============
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  EDITOR
  VIEWER
}

// ============== CATEGOR√çAS ==============
model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  imageUrl    String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]

  @@index([slug])
  @@index([isActive])
  @@map("categories")
}

// ============== PRODUCTOS ==============
enum ProductStatus {
  DISPONIBLE
  OCUPADO
  VENDIDO
  EN_CAMINO
}

enum ProductSaleType {
  COMPRABLE // venta
  ALQUILABLE // alquiler
}

model Product {
  id          String          @id @default(cuid())
  title       String
  slug        String          @unique
  description String // HTML o Markdown
  price       Decimal         @db.Decimal(12, 2)
  status      ProductStatus   @default(DISPONIBLE)
  saleType    ProductSaleType @default(ALQUILABLE) // comprable o alquilable
  categoryId  String?
  sortOrder   Int             @default(0)
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  category     Category?        @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  images       ProductImage[]
  packageItems PackageProduct[]

  @@index([status])
  @@index([categoryId])
  @@index([isActive])
  @@index([createdAt])
  @@index([slug])
  @@map("products")
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  url       String
  alt       String?
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@map("product_images")
}

// ============== PAQUETES (BUNDLES) ==============
model Package {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  description  String?
  specialPrice Decimal  @db.Decimal(12, 2)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  items PackageProduct[]

  @@map("packages")
}

model PackageProduct {
  id        String @id @default(cuid())
  packageId String
  productId String
  quantity  Int    @default(1)
  sortOrder Int    @default(0)

  package Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([packageId, productId])
  @@map("package_products")
}

// ============== MENSAJES DE CONTACTO ==============
model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  eventDate String?
  eventType String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contact_messages")
}
